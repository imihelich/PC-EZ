@model LCCapstone.ViewModels.AddUserViewModel

<h1>Create An Account</h1>

<form asp-controller="User" asp-action="Add" method="post">

    <span class="alert-danger">@Model.Error</span>

    <div class="form-group">
        <label asp-for="Username"></label>
        <input class="form-control" asp-for="Username" />
        <span class="alert-danger" asp-validation-for="Username"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input class="form-control" asp-for="Password" type="password" />
        <span class="alert-danger" asp-validation-for="Password"></span>
    </div>

    <div class="form-group">
        <label asp-for="VerifyPass"></label>
        <input class="form-control" asp-for="VerifyPass" type="password" />
        <span class="alert-danger" asp-validation-for="VerifyPass"></span>
    </div>

    <div class="form-group">
        <label asp-for="SkillLevel"></label>
        <select asp-for="SkillLevel">
            <option>Newbie</option>
            <option>Hobbyist</option>
            <option>Experienced</option>
            <option>Professional</option>
        </select>
    </div>

    <input type="submit" value="Create Account" />

</form>

